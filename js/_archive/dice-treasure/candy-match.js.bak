    el.classList.remove('dragging', 'trail', 'pad-empty');

    if (this._dragging) {
      if (this._dragCur && this._dragCur[0] === r && this._dragCur[1] === c) {
        el.classList.add('pad-empty');
        el.textContent = '';
      }
      if (this._dragTrail.some(t => t[0] === r && t[1] === c)) {
        el.classList.add('trail');
      }
    }
  }

